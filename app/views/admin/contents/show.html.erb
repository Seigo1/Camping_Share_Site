<div class="container">
  <div class="row">
    <table class="col-lg table table-bordered mx-auto my-3">
      <thead>
      </thead>
      <tbody>
        <tr>
          <td style="width: 20%;">評価</td>
          <td>
            <%= @content.review %>
          </td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td>
            <%= @content.genre.name %>
          </td>
        </tr>
        <tr>
          <td>キャンプ場名</td>
          <td><%= @content.name %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @content.address %></td>
        </tr>
        <tr>
          <td>紹介文</td>
          <td><%= @content.introduction %></td>
        </tr>
        <tr>
          <td>写真</td>
          <td>
            <%= attachment_image_tag @content, :content_image, :fill, 100, 100, size:'100x100', format: 'jpeg', fallback: "no_image.jpeg" %>
            <%= link_to "編集する", edit_content_path(@content.id), class: "btn btn-success", type:"button" %>
            <%= link_to "投稿を削除", content_path, method: :delete, class: "btn btn-danger" %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<div id="map"></div>

<script type="text/javascript">
  function initMap() {
// latitude,longitudeから位置を特定
    var test ={lat: <%= @content.latitude %>, lng: <%= @content.longitude %>};
    var map = new google.maps.Map(document.getElementById('map'), {
      zoom: 15,
      center: test
      });
    var transitLayer = new google.maps.TransitLayer();
    transitLayer.setMap(map);

    var contentString = '住所：<%= @content.address %>';
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });

// Map上の指定した位置にピンを挿して表示する
    var marker = new google.maps.Marker({
      position:test,
      map: map,
      title: contentString
    });

    marker.addListener('click', function() {
      infowindow.open(map, marker);
    });
  }
</script>
<!-- googlemap API -->
<script async defer
  src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=<%= ENV['GOOGLE_MAP_API_KEY'] %>&callback=initMap">
</script>
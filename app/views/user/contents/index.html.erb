<div class="container-lg-fluid">
  <div class="row text-center mx-auto" style="background-color: rgba(255,250,220,1.0);">
    <div class="col-lg my-3">
      <table class="row-lg table table-bordered mx-auto" style="width: 80%;">
        <thead class="thead-dark">
          <tr>
            <th style="width: 15%;">日時</th>
            <th style="width: 15%;">名前</th>
            <th style="width: 15%;">キャンプ場名</th>
            <th style="width: 25%;">住所</th>
          </tr>
        </thead>
        <tbody>
          <% @contents.each do |content| %>
          <tr>
            <td><%= content.created_at.strftime("%Y/%m/%d %H:%M:%S") %></td>
            <td><%= content.user.name %></td>
            <td><%= content.name %></td>
            <td><%= content.address %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
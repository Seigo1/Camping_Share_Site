<p class="caption">
  <% if @content.favorited_by?(current_user) %>
    <%= link_to content_favorites_path(@content), method: :delete, class: "favorite_btn" do %>
      ♥<%= @content.favorites.count %> いいね
    <% end %>
  <% else %>
    <%= link_to content_favorites_path(@content), method: :post, class: "favorite_btn" do %>
      ♡<%= @content.favorites.count %> いいね
    <% end %>
  <% end %>
</p>
<div class="container-lg-fluid">
  <div class="row text-center mx-auto" style="background-color: rgba(255,250,220,1.0);">
    <div class="col-lg my-3">
      <table class="table table-bordered mx-auto" style="width: 80%;">
        <thead class="thead-dark">
          <tr>
            <th style="width: 20%;">ニックネーム</th>
            <th style="width: 60%;">紹介文</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th>
                <%= link_to user_path(user.id) do %>
                  <%= user.name %>
                <% end %>
              </th>
              <td><%= user.introduction %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
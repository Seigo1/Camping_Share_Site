<div class="container-lg-fluid" style="background-color: rgba(255,250,220,1.0);">
  <div class="row text-center mx-auto" style="width: 80%;">
    <table class="col-lg table table-bordered mx-auto my-3">
      <thead>
      </thead>
      <tbody>
        <tr>
          <td style="width: 20%;">
            <%= attachment_image_tag @user, :image, :fill, 100, 100, size:'100x100', format: 'jpeg', fallback: "no_image.jpeg" %>
          </td>
          <td>
            <% if current_user.id == @user.id %>
              <%= link_to "編集する", edit_user_path(current_user.id), class: "btn btn-success", type:"button" %>
            <% else %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td>ニックネーム</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td>紹介文</td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
      </tbody>
    </table>
    <table class="col-lg table table-bordered mx-auto my-3">
      <thead>
        <tr>
          <th colspan="2">お気に入り</th>
        </tr>
      </thead>
      <tbody>
        <% @bookmarks.each do |bookmark| %>
          <tr>
            <td>キャンプ場名</td>
            <td colspan="2">
            <%= link_to content_path(bookmark.content.id) do %>
              <%= bookmark.content.name %>
            <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="row text-center mx-auto" style="width: 80%;">
    <table class="col-lg table table-bordered mx-auto my-3">
      <thead>
        <th>キャンプ場名</th>
        <th>住所</th>
        <th>紹介文</th>
        <th>評価</th>
      </thead>
      <tbody>
        <% @contents.each do |content| %>
        <tr>
          <td>
            <%= link_to content_path(content.id) do %>
              <%= content.name %>
            <% end %>
            </td>
          <td><%= content.address %></td>
          <td><%= content.introduction %></td>
          <td><%= content.review %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>